<odoo>
    <record id="view_stock_move_line_tree_inherit" model="ir.ui.view">
        <field name="name">stock.move.line.tree.inherit.reporting</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="move_type"/>
                <field name="current_unit_cost"/>
                <field name="current_total_cost"/>
                <field name="current_unit_price"/>
                <field name="current_total_sales"/>
                <field name="onhand_at_move"/>
            </xpath>
        </field>
    </record>
</odoo>